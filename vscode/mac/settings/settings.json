    "code-runner.temporaryFileName": "crfile",
    "code-runner.showRunCommandInExplorerContextMenu": false,
    "code-runner.languageIdToFileExtensionMap": {
        "bat": ".bat",
        "powershell": ".ps1",
        "typescript": ".ts"
    },
    "C_Cpp.debugShortcut": false,
    "clang.cxxflags": [
        "-std=c++17"
    ],
    "glassit.alpha": 150,
